<% content_for :scripts do %>
  <script type="text/javascript">
    $().ready(function() {
      $("form").validate({
        rules: {
          "user[email]" : {
            required: true,
            email: true
          },
          "user[password]": {
            required: true
          }
        },
        submitHandler: function(form) {
          form.submit();
        }
      });
    });
</script>
<% end %>
<div class="login-container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center m-b-md">
        <h3>Welcome to Talent Hacking</h3>
        <small>The "A" method for recruiters</small>
      </div>
      <div class="hpanel">
        <div class="panel-body">
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
            <%= devise_error_messages! %>
            <%- flash.each do |name, msg| -%>
                <%= content_tag :div, msg,:class => "alert alert-danger", :id => "flash_#{name}" if msg.is_a?(String) %>
            <%- end -%>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: "example@gmail.com" %>
              <span class="help-block small">Use your email to sign in</span>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control', placeholder: "******" %>
              <span class="help-block small">Enter your password</span>
            </div>
            <div class="checkbox">
              <%= f.check_box :remember_me, class: "i-checks" %>
              Remember me
              <p class="help-block small">(if this is a private computer)</p>
            </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "help-block pull-right" %><br />
            <% end -%>
            <%= f.submit "Login", class: "btn btn-success btn-block" %>
            <%- if devise_mapping.registerable? %>
              <%= link_to 'Register', new_registration_path(resource_name), class: 'btn btn-default btn-block'  %>
            <% end -%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
