<aside id="menu">
  <div id="navigation">
    <div class="profile-picture">
      <%= image_tag current_user.avatar.url(:thumb),class: "img-circle m-b" if current_user.avatar.exists? %>
      <% if !current_user.avatar.exists? %>
        <div class="img-circle m-b profile-empty-image" style="margin: 0px auto 15px auto;">
          <%= current_user.name[0]%>
        </div>
      <% end %>

      <div class="stats-label text-color">
        <span class="font-extra-bold font-uppercase">
          <%= current_user.name %>
        </span>

        <div class="dropdown">
          <a class="dropdown-toggle" href="#" data-toggle="dropdown">
            <small class="text-muted"><%= current_user.role.capitalize %> <b class="caret"></b></small>
          </a>
          <ul class="dropdown-menu animated flipInX m-t-xs">
            <li>
              <%= link_to "Profile", profile_path %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to destroy_user_session_path, :method => :delete do %>
                Logout
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <ul class="nav" id="side-menu">
      <li class="<%= current_page?(root_path) ? "active" : "" %>">
        <%= link_to root_path do %>
          <span class="nav-label">Dashboard</span>
        <% end %>
      </li>
      <% if current_user.admin? %>
        <li class="<%= current_page?(users_path) ||
                       current_page?(new_user_path) ||
                       current_page?(user_path(current_user)) ? "active" : ""%>">

          <a href="#" <%= current_page?(users_path) ||
                          current_page?(new_user_path) ||
                          current_page?(user_path(current_user)) ? 'aria-expanded="true"' : "" %>>
            <span class="nav-label">Users</span>
            <span class="fa arrow"></span>
          </a>
          <ul class="nav nav-second-level collapse
                     <%= current_page?(users_path) ||
                         current_page?(new_user_path) ||
                         current_page?(user_path(current_user)) ? 'in' : "" %>"
              aria-expanded="<%= current_page?(users_path) ||
                                 current_page?(new_user_path) ||
                                 current_page?(user_path(current_user)) %>">
            <li class="<%= current_page?(users_path) ? "active" : "" %>"><%= link_to "All Users",users_path %></a></li>
            <li class="<%= current_page?(new_user_path) ? "active" : "" %>"><%= link_to "Invite new user",new_user_path %></li>
            <li class="<%= current_page?(user_path(current_user)) ? "active" : "" %>"><%= link_to "Your profile", profile_path %></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</aside>
