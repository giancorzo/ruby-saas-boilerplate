<% content_for :page_title do %>
  <div class="small-header">
      <div class="hpanel">
          <div class="panel-body">
              <div id="hbreadcrumb" class="pull-right">
                  <ol class="hbreadcrumb breadcrumb">
                      <li><%= link_to "Dashboard", root_path %></li>
                      <li>
                          <span>Users</span>
                      </li>
                      <li class="active">
                          <span>List all</span>
                      </li>
                  </ol>
              </div>
              <h2 class="font-light m-b-xs">
                  Users
              </h2>
              <small>Manage your application users</small>
          </div>
      </div>
  </div>
<% end %>
<% @users.each_slice(4) do |rows| %>
  <div class="row mb-7">
    <% rows.each do |user| %>
      <div class="col-lg-3">
        <%= link_to edit_user_path(user), class: "hpanel #{header_color(user)} user-panel" do %>
          <div class="panel-body">
            <span class="label label-<%= bootstrap_color(user) %> pull-right"><%= user.role.capitalize if user.role %></span>
            <%= image_tag user.avatar.url(:thumb),class: "img-circle" if user.avatar.exists? %>
            <% if !user.avatar.exists? %>
              <div class="img-circle m-b profile-empty-image">
                <%= user.name[0]%>
              </div>
            <% end %>
            <h3><%= user.name %></h3>
            <div class="text-muted font-bold m-b-xs"><%= user.email %></div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
